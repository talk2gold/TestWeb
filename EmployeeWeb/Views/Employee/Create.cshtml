@{
}
@model EmployeeUpsertVM
<div>Create Employee</div>
<form method="post" class="row">
    <div class="p-3"> 
        <div class="form-floating py-1 col-12">
            <input asp-for="FirstName" class="form-control border shardow" />
            <label asp-for="FirstName" class="ms-2"></label>
        </div>
        <div class="form-floating py-1 col-12">
            <input asp-for="LastName" class="form-control border shardow" />
            <label asp-for="LastName" class="ms-2"></label>
        </div>
        <div class="form-floating py-1 col-12">
            <input asp-for="Salary" class="form-control border shardow" />
            <label asp-for="Salary" class="ms-2"></label>
        </div>
        <div class="form-floating py-1 col-12">
            <input asp-for="JoinDate" class="form-control border shardow" />
            <label asp-for="JoinDate" class="ms-2"></label>
        </div>
        <div class="form-floating py-1 col-12">            
            <select asp-for="DeptID" asp-items="@Model.Depts" class="form-control border shardow">
                <option disabled selected>-- Select Department --</option>
            </select>
            <label asp-for="DeptID" class="ms-2">Department</label>
        </div>

        <div class="form-floating py-1 col-12">
            <select asp-for="MgrNo" asp-items="@Model.Managers" class="form-control border shardow">
                <option disabled selected>-- Select Department --</option>
            </select>
            <label asp-for="MgrNo" class="ms-2">Manager</label>

        </div>
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-success w-100">
                    <i class="bi bi-floppy-fill text-primary"></i> Save
                </button>
            </div>
        </div>
    </div>

</form>