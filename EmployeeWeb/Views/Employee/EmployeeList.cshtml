@{
}
@model IEnumerable<EmployeeVM>

<a class="btn btn-primary" asp-controller="Employee" asp-action="Create"><i class="bi bi-plus-square-fill"> Employee</i></a>
<table class="table table-sm">
    <tr>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Salary</th>
        <th>Join Date</th>
        <th>Department</th>
        <th>Manager</th>
        <th></th>
    </tr>
    @foreach( var i in Model)
    {
        <tr>
            <td>@i.FirstName</td>
            <td>@i.LastName</td>
            <td>@i.Salary</td>
            <td>@i.JoinDate</td>
            <td>@i.DeptName</td>
            <td>@i.MgrName</td>
            <td>
                <a asp-controller="Employee" asp-action="Edit" asp-route-id="@i.EmpNo"><i class="bi bi-pencil-fill"></i></a>
                <a asp-controller="Employee" asp-action="Delete" asp-route-id="@i.EmpNo"><i class="bi bi-trash-fill"></i></a> 
            </td>
        </tr>
    }
</table>